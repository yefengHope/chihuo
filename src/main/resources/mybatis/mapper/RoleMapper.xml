<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fengyu.system.dao.RoleMapper">


    <select id="findByRoleList" resultType="com.fengyu.system.entity.RoleEntity">

        SELECT * FROM ts_role r
        <where>
            <if test="roles != null">
                r.ID IN
                <foreach collection="roles" item="roleId" open="(" close=")" separator=",">
                     #{roleId}
                </foreach>
            </if>
        </where>

    </select>
</mapper>